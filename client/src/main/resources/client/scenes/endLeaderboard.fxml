<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0" styleClass="border_plane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.LeaderboardCtrl">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <VBox prefHeight="206.0" prefWidth="350.0">
                     <children>
                        <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                        <HBox prefHeight="200.0" prefWidth="350.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Thanks for playing!">
                                 <font>
                                    <Font size="38.0" />
                                 </font>
                              </Text>
                              <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                        <HBox prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" text="Current leaderboard">
                                 <font>
                                    <Font size="21.0" />
                                 </font>
                              </Text>
                              <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <Region prefHeight="20.0" prefWidth="350.0" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox maxHeight="616.0" prefHeight="616.0" prefWidth="1920.0" styleClass="text">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <ListView fx:id="leaderboardList" prefHeight="616.0" prefWidth="650.0">
                     <padding>
                        <Insets bottom="15.0" top="15.0" />
                     </padding>
                  </ListView>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="0.0" prefWidth="1920.0" VBox.vgrow="ALWAYS">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <VBox>
                     <children>
                        <Region minHeight="20.0" minWidth="0.0" VBox.vgrow="ALWAYS" />
                        <Region VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Region minHeight="20.0" minWidth="0.0" VBox.vgrow="ALWAYS" />
                        <Button fx:id="QuitButton" mnemonicParsing="false" onAction="#showMainScreen" prefHeight="54.0" prefWidth="148.0" styleClass="jokerButton" text="Back" />
                        <Region VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <Region HBox.hgrow="ALWAYS" />
               </children></HBox>
            <Region VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </center>
</BorderPane>
