<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0" styleClass="border_plane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.NameScreenCtrl">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <Region VBox.vgrow="ALWAYS" />
                <HBox maxHeight="616.0" prefHeight="188.0" prefWidth="1920.0">
                    <children>
                        <Region HBox.hgrow="ALWAYS" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="Enter your name:" textAlignment="CENTER">
                     <font>
                        <Font size="96.0" />
                     </font>
                  </Text>
                        <Region HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            <HBox maxHeight="616.0" prefHeight="92.0" prefWidth="1920.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField fx:id="MPnameField" alignment="TOP_CENTER" onKeyPressed="#checkForBackspace" prefHeight="105.0" prefWidth="637.0">
                     <font>
                        <Font size="45.0" />
                     </font>
                  </TextField>
                      <Region minHeight="60.0" />
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Region prefHeight="100.0" prefWidth="1553.0" />
                  <Text fx:id="mpWarningMessage" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="alertText" text="This name is already taken! " textAlignment="CENTER">
                     <font>
                        <Font size="31.0" />
                     </font>
                  </Text>
                  <Region prefHeight="100.0" prefWidth="1575.0" />
               </children>
            </HBox>
            <Region minHeight="60.0" />
            <HBox maxHeight="616.0" prefHeight="216.0" prefWidth="1920.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#back" prefHeight="192.0" prefWidth="412.0" text="Back">
                     <font>
                        <Font size="80.0" />
                     </font>
                  </Button>
                  <Region minWidth="100.0" />
                  <Button mnemonicParsing="false" onAction="#startMPGame" prefHeight="192.0" prefWidth="412.0" text="Start">
                     <font>
                        <Font size="80.0" />
                     </font>
                  </Button>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Region VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </center>
</BorderPane>
