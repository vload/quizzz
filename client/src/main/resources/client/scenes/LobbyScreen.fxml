<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0" styleClass="border_plane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.LobbyScreenCtrl">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Region VBox.vgrow="ALWAYS" />
            <HBox maxHeight="300.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Waiting for players ...">
                     <font>
                        <Font size="50.0" />
                     </font>
                  </Text>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Region minHeight="30.0" prefHeight="29.0" prefWidth="1920.0" />
            <HBox maxHeight="616.0" prefHeight="616.0" prefWidth="1920.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <ListView fx:id="playerList" prefHeight="300.0" prefWidth="712.0">
                     <padding>
                        <Insets bottom="15.0" top="15.0" />
                     </padding>
                  </ListView>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="0.0" prefWidth="1920.0" VBox.vgrow="ALWAYS">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <VBox>
                     <children>
                        <Region minHeight="20.0" minWidth="0.0" VBox.vgrow="ALWAYS" />
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBackToMainScreen" prefHeight="90.0" prefWidth="395.0" styleClass="jokerButton" text="Back" />
                        <Region VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <Region minWidth="50.0" />
                  <VBox>
                     <children>
                        <Region minHeight="20.0" minWidth="0.0" VBox.vgrow="ALWAYS" />
                        <Button fx:id="startButton1" mnemonicParsing="false" onAction="#updateListView" prefHeight="90.0" prefWidth="395.0" styleClass="jokerButton" text="Start" />
                        <Region VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <Region HBox.hgrow="ALWAYS" />
               </children></HBox>
            <Region VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </center>
</BorderPane>
